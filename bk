  <script>
    document.getElementById('upload').addEventListener('change', function(e){
      if(e.target.files.length === 0) return;
      let file = e.target.files[0];
      let reader = new FileReader();
      reader.onload = function(event){
        Tesseract.recognize(event.target.result, 'eng').then(({ data: { text } }) => {
          let nums = text.match(/\d+(\.\d+)?/g);
          if(nums && nums.length >= 5){
            document.getElementById('temp').value = nums[0];
            document.getElementById('rh').value = nums[1];
            document.getElementById('ah').value = nums[2];
            document.getElementById('dewPoint').value = nums[3];
            document.getElementById('vpd').value = nums[4];
            calcAT();
          } else {
            alert('æœªè¯†åˆ«åˆ°è¶³å¤Ÿçš„æ•°å­—ï¼Œè¯·ç¡®ä¿å›¾ç‰‡æ¸…æ™°ä¸”ä¿¡æ¯å®Œæ•´');
          }
        });
      };
      reader.readAsDataURL(file);
    });

    ['temp','rh','ah','dewPoint','vpd'].forEach(id => {
      document.getElementById(id).addEventListener('input', calcAT);
    });

    function calcAT() {
      let T = parseFloat(document.getElementById('temp').value);
      let RH = parseFloat(document.getElementById('rh').value);
      let AH = parseFloat(document.getElementById('ah').value);
      let Td = parseFloat(document.getElementById('dewPoint').value);
      let VPD = parseFloat(document.getElementById('vpd').value);

      if ([T,RH,AH,Td,VPD].some(isNaN)) {
        ['resultSilent','resultAuto','comfortSilent','comfortAuto','sleepSilent','sleepAuto'].forEach(id=>document.getElementById(id).innerText='');
        return;
      }

      let e = (RH / 100) * 6.105 * Math.exp((17.27 * T) / (237.7 + T));
      let AT_silent = T + 0.33 * e - 0.70 * 0.2 - 4.00;
      let AT_auto = T + 0.33 * e - 0.70 * 0.5 - 4.00;
      
      // --- æ ¸å¿ƒä¿®æ”¹åŒºåŸŸï¼šå…¨æ–°çš„è¯„åˆ†ç³»ç»Ÿ ---

      // 1. å•é¡¹è¯„åˆ†å‡½æ•°
      const getATScore = (at) => {
        if (at >= 24.0 && at <= 25.5) return { score: 2, text: 'ä½“æ„Ÿæ¸©å’Œ' };
        if (at >= 22.5 && at < 24.0) return { score: 1, text: 'ä½“æ„Ÿèˆ’é€‚' };
        if (at > 25.5 && at <= 27.0) return { score: 1, text: 'ä½“æ„Ÿèˆ’é€‚' };
        if (at >= 21.0 && at < 22.5) return { score: -1, text: 'ä½“æ„Ÿåå‡‰' };
        if (at > 27.0 && at <= 28.5) return { score: -1, text: 'ä½“æ„Ÿåçƒ­' };
        if (at < 21.0) return { score: -2, text: 'ä½“æ„Ÿè¿‡å†·' };
        return { score: -2, text: 'ä½“æ„Ÿè¿‡çƒ­' };
      };

      const getHumidityScore = (rh, td, vpd) => {
          if (rh > 70 || td > 20 || vpd < 0.6) return { score: -2, text: 'ä¸”éå¸¸é—·çƒ­' };
          if (rh > 60 || td > 18 || vpd < 0.8) return { score: -1, text: 'ä¸”æœ‰äº›é—·' };
          if (rh < 35 || td < 10 || vpd > 1.8) return { score: -2, text: 'ä¸”éå¸¸å¹²ç‡¥' };
          if (rh < 45 || td < 12 || vpd > 1.6) return { score: -1, text: 'ä¸”æœ‰äº›å¹²' };
          if (rh >= 45 && rh <= 60) return { score: 1, text: 'æ¹¿åº¦é€‚ä¸­' };
          return { score: 0, text: '' };
      };

      // 2. ç»¼åˆåˆ¤æ–­å‡½æ•°
      function judge(AT, RH, Td, VPD) {
        const atResult = getATScore(AT);
        const humidityResult = getHumidityScore(RH, Td, VPD);

        let finalText = atResult.text;
        let finalColor = '#4caf50'; // é»˜è®¤ç»¿è‰²
        let sleepSuggestion = 'ç¡è§‰: è–„æ£‰é•¿è¢–/åŒ…å±è¡£';

        // ç»„åˆæè¿°
        if (humidityResult.score < 1 && humidityResult.text) {
            if (atResult.score > 0) { // æ¸©åº¦èˆ’é€‚ä½†æ¹¿åº¦ä¸ä½³
                finalText += ` ğŸ™‚ ${humidityResult.text.replace('ä¸”', 'ä½†')}`;
            } else { // æ¸©åº¦å’Œæ¹¿åº¦éƒ½ä¸ä½³
                finalText += ` ğŸ˜Ÿ ${humidityResult.text}`;
            }
        } else if (humidityResult.score === 1 && atResult.score === 2) {
             finalText = 'é»„é‡‘èŒƒå›´ ğŸ˜„ æ¸©æ¹¿åº¦å®Œç¾';
        }

        // æ ¹æ®æœ€å·®çš„æŒ‡æ ‡å†³å®šé¢œè‰²å’Œæ ¸å¿ƒå»ºè®®
        const worstScore = Math.min(atResult.score, humidityResult.score);

        switch (worstScore) {
          case 2: // åŒä¼˜
            finalColor = '#4caf50'; // ç»¿è‰²
            sleepSuggestion = 'ç¡è§‰: è–„æ£‰é•¿è¢–/åŒ…å±è¡£';
            break;
          case 1: // è‰¯å¥½
            finalColor = '#8bc34a'; // æµ…ç»¿
             sleepSuggestion = (AT > 25.5) ? 'ç¡è§‰: çŸ­è¢–/è–„æ¬¾åŒ…å±è¡£' : 'ç¡è§‰: é•¿è¢–+åŒ…å±è¡£';
            break;
          case -1: // è½»å¾®ä¸é€‚
            finalColor = '#ffc107'; // ç¥ç€è‰²
            if (atResult.score < 0 && humidityResult.score < 0) sleepSuggestion = 'ç¡è§‰: è°ƒæ•´æ¸©æ¹¿åº¦å†ç¡';
            else if (atResult.text.includes('å‡‰')) sleepSuggestion = 'ç¡è§‰: é•¿è¢–+è–„ç›–æ¯¯';
            else if (atResult.text.includes('çƒ­')) sleepSuggestion = 'ç¡è§‰: çŸ­è¢–+è–„ç¡è¢‹';
            else if (humidityResult.text.includes('å¹²')) sleepSuggestion = 'ç¡è§‰: ç›–å¥½å¹¶å¼€å¯åŠ æ¹¿å™¨';
            else if (humidityResult.text.includes('é—·')) sleepSuggestion = 'ç¡è§‰: å¼€ç©ºè°ƒé™¤æ¹¿/é€šé£';
            break;
          case -2: // ä¸¥é‡ä¸é€‚
            finalColor = '#f44336'; // çº¢è‰²
             if (atResult.text.includes('å†·')) {
                finalText += ' ğŸ¥¶ åŠ¡å¿…ä¿æš–';
                sleepSuggestion = 'ç¡è§‰: é•¿è¢–+ç¡è¢‹/ç›–æ¯¯';
             } else if (atResult.text.includes('çƒ­')) {
                finalText += ' ğŸ¥µğŸ¥µ å¿…é¡»é™æ¸©';
                sleepSuggestion = 'ç¡è§‰: èƒŒå¿ƒ/å°¿ä¸æ¹¿';
             } else if (humidityResult.text.includes('å¹²ç‡¥')) {
                finalText += ' ğŸœï¸ ä¸¥é‡å¹²ç‡¥';
                sleepSuggestion = 'ç¡è§‰: ç«‹å³åŠ æ¹¿ï¼';
             } else if (humidityResult.text.includes('é—·çƒ­')) {
                finalText += ' â™¨ï¸ ä¸¥é‡é—·çƒ­';
                sleepSuggestion = 'ç¡è§‰: ç«‹å³é™¤æ¹¿é™æ¸©ï¼';
             }
            break;
        }

        return { text: finalText, sleep: sleepSuggestion, color: finalColor };
      }

      let s = judge(AT_silent, RH, Td, VPD);
      let a = judge(AT_auto, RH, Td, VPD);

      document.getElementById('resultSilent').innerText = `é™éŸ³: ${AT_silent.toFixed(1)}â„ƒ`;
      document.getElementById('comfortSilent').innerText = s.text; document.getElementById('comfortSilent').style.color = s.color;
      document.getElementById('sleepSilent').innerText = s.sleep;

      document.getElementById('resultAuto').innerText = `è‡ªåŠ¨: ${AT_auto.toFixed(1)}â„ƒ`;
      document.getElementById('comfortAuto').innerText = a.text; document.getElementById('comfortAuto').style.color = a.color;
      document.getElementById('sleepAuto').innerText = a.sleep;
    }

    document.addEventListener('DOMContentLoaded', calcAT);
  </script>
